<Window x:Class="Bindowanie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bindowanie"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Name="thisWindow">
    <StackPanel>

        <TextBox Text="{Binding ElementName=thisWindow, Path=SourceValue}"></TextBox>
        <Button Click="Button_Click">Wygeneruj</Button>
        <TextBlock Text="{Binding ElementName=thisWindow, Path=DayOfTheWeek}"></TextBlock>
    </StackPanel>
</Window>
